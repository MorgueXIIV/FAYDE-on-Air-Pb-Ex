<!DOCTYPE html>
<html>
  <head>
    <title> <%= @pageTitle.nil? ? "FAYDE" : @pageTitle %> - FAYDE On-Air Playback Experiment</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <!--%= favicon_link_tag 'favicon.ico' %>-->
    <%= stylesheet_link_tag "/stylesheets/dark.css" %>
  </head>

  <body>
    <p class="menu">
      <b><%= link_to "Search Dialogues", {:controller => 'search', :action => 'result' } %> | <%= link_to "Home", {:controller => 'fayde', :action => 'index' } %></b>
      <% if @pageTitle != "Search" then %>
        <%= form_tag(search_path, method: :get) do %>
          Quick Search: <%= search_field_tag :query, params[:query], placeholder: "Search", class: "form-control" %> <%= submit_tag 'Search' %>
        <% end %>
      <% end %> 
    </p> 
    <hr />
    <div class="main">
    <%= yield %>
    </div>
  </body>
</html>
