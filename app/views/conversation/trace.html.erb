<h2 id="title"> Browsing Conversation </h2>
<h3><%= @conversationDescribe.id  %>: <%= @conversationDescribe.title  %>
<!--  -->
</h3> <p> <%= @conversationDescribe.description %> </p>
<p> <%= link_to "Conversation Root", {:controller => 'conversation', :action => 'trace', :dialogueid => (((@conversationDescribe.id)*10000)+1)} %> </p>
<p id="options back"> <ol>
	<%  if not @backOptions.blank?
				@backOptions.each do | result | %>
<li> <%= link_to result.showShort(true), {:controller => 'conversation', :action => 'trace', :dialogueid => "#{result.id}-#{@idsList}", :anchor => "title" } %></li>
<% end end %> </ol> </p>

<%=  %>
<p> <ul><%  @builtConvo.each do | result | %>
	<div class=<%=result.isHub? ? "hub" : "notHub" %>>
		<li id="<%= result.id %>"> <span class="incid">  <% if not result.isHub? %>[<%= result.showLineage %>] <% end %><a href="<%= result.id %>"> <%= result.incid %></a>.</span>
			<span class='actor'><%= result.showActor %> - </span> <%= result.showDialogue(false,false) %>
			<i>
				<ul class="details">
					<% result.showDetails.each do | deet | %>
						<li> <%= deet %> </li>
					<% end %>
					<% result.showCheck.each do | deet | %>
						<li> <%= deet %>
						<ol> <% result.showModifiers.each do | deet | %>
							<li> <%= deet %> </li>
						<% end %>
						</ol></li>
					<% end %>
				</ul>
			</i>
		</li>
	</div>
<% end %> </ul> </p>

<p id="options forward"> <ol><%  @forwOptions.each do | result | %>
<li><%= link_to result.showShort, {:controller => 'conversation', :action => 'trace', :dialogueid => "#{@idsList}-#{result.id}", :anchor => "#{result.id}"} %></li>
<% end %> </ol> </p>

